\characterpicture{@PORTRAIT}
\name{@NAME}
\ST{@ST}[@ST_POINTS]
\DX{@DX}[@DX_POINTS]
\IQ{@IQ}[@IQ_POINTS]
\HT{@HT}[@HT_POINTS]

\SM{@SIZE}

\HP{@BASIC_HP}
\FP{@BASIC_FP} 
\Per{@PERCEPTION}
\Will{@WILL}

\thr{@THRUST}
\sw{@SWING}

\basicspeed{@BASIC_SPEED}[@BASIC_SPEED_POINTS]
