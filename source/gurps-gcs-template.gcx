@MELEE_LOOP_START\meleeattack{
  name={@DESCRIPTION_PRIMARY@DESCRIPTION_NOTES_PAREN (@USAGE)},
  level=@LEVEL,
  damage={@DAMAGE},
  reach={@REACH}
}@MELEE_LOOP_END
@RANGED_LOOP_START\rangedattack{
  name={@DESCRIPTION_PRIMARY@DESCRIPTION_NOTES_PAREN (@USAGE)},
  level=@LEVEL,
  damage={@DAMAGE},
  range={@RANGE}
}@RANGED_LOOP_END