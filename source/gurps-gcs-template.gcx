@ADVANTAGES_ONLY_LOOP_START
\advantage{@DESCRIPTION_PRIMARY@DESCRIPTION_MODIFIER_NOTES_PAREN}[@POINTS] @ADVANTAGES_ONLY_LOOP_END
@PERKS_LOOP_START
\perk{@DESCRIPTION_PRIMARY@DESCRIPTION_MODIFIER_NOTES_PAREN} @PERKS_LOOP_END

@DISADVANTAGES_LOOP_START
\disadvantage{@DESCRIPTION_PRIMARY@DESCRIPTION_MODIFIER_NOTES_PAREN}[@POINTS] @DISADVANTAGES_LOOP_END
